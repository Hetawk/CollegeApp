    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/examId1000" />

            <EditText
                android:id="@+id/examIDet"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/examIdHint1002"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/examName1006" />

            <EditText
                android:id="@+id/examNameet"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/examName1006"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView19"
                android:layout_width="189dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:text="@string/examVenue1016" />

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:text="@string/grade1020" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="271dp"
                android:layout_height="35dp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/examDate1017" />
            <EditText
                android:id="@+id/etExamDate"
                android:layout_width="248dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="#d4d4d4"
                android:hint="Select Date..."
                android:padding="15dp"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textColorHint="#090"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textView17"
                android:layout_width="76dp"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:text="@string/examTime1015" />

            <EditText
                android:id="@+id/etExamTime"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/examTimeHint1018"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="262dp"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/addExambtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="createExamBtnClicked"
                android:text="@string/createExam1111" />

            <Button
                android:id="@+id/updateExambtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="updateExambtnClicked"
                android:layout_marginStart="8dp"
                android:text="@string/examMarksUpdate1114"
                tools:text="@string/examMarksUpdate1114" />
        </LinearLayout>


    </LinearLayout>






</LinearLayout>